{% extends 'base.html.twig' %}

{% block title %}RespQuiz Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">RespQuiz Details</h1>
        </div>
        <div class="card-body">
            <!-- RespQuiz Details Table -->
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th class="bg-light">ID</th>
                        <td>{{ resp_quiz.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">User Answer 1</th>
                        <td>{{ resp_quiz.userAnswer1 }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">User Answer 2</th>
                        <td>{{ resp_quiz.userAnswer2 }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">User Answer 3</th>
                        <td>{{ resp_quiz.userAnswer3 }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Submitted At</th>
                        <td>{{ resp_quiz.submittedAt ? resp_quiz.submittedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Rate</th>
                        <td>{{ resp_quiz.rate }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Score</th>
                        <td>{{ resp_quiz.score }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('app_resp_quiz_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <div>
                    <a href="{{ path('app_resp_quiz_edit', {'id': resp_quiz.id}) }}" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    {{ include('resp_quiz/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}