{% extends 'baseblechras.html.twig' %}

{% block title %}Event Index{% endblock %}

{% block body %}
    <div class="container py-5 d-flex flex-column min-vh-100">
        <h1 class="text-center mb-5">Upcoming Events</h1>

        <div class="row justify-content-center flex-grow-1">
            {% for event in events %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title text-primary">{{ event.name }}</h5>
                            <p class="card-text text-muted">{{ event.description }}</p>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Date:</strong> {{ event.date ? event.date|date('F d, Y \a\t H:i') : 'N/A' }}</li>
                                <li class="list-group-item"><strong>Location:</strong> {{ event.location }}</li>
                            </ul>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-between">
                            <a href="{{ path('app_event_show2', {'id': event.id}) }}" class="btn btn-outline-primary btn-sm">More details</a>
                            <a href="{{ path('app_registration_newfront', {'id': event.id}) }}" class="btn btn-success btn-sm">Register</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <div class="alert alert-info" role="alert">
                        <h5 class="mb-0">No events found.</h5>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    
{% endblock %}