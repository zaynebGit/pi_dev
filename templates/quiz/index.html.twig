{% extends 'index.html.twig' %}

{% block title %}Liste des Quiz{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">üìã Liste des Quiz</h1>
        <a href="{{ path('app_quiz_new') }}" class="btn btn-success">
            ‚ûï Cr√©er un Nouveau Quiz
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Mati√®re</th>
                    <th>Question 1</th>
                    <th>Question 2</th>
                    <th>Question 3</th>
                    <th>Bonne R√©p. 1</th>
                    <th>Bonne R√©p. 2</th>
                    <th>Bonne R√©p. 3</th>
                    <th>Difficult√©</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for quiz in quizzes %}
                    <tr>
                        <td>{{ quiz.id }}</td>
                        <td>{{ quiz.Matiere }}</td>
                        <td>{{ quiz.quest1 }}</td>
                        <td>{{ quiz.quest2 }}</td>
                        <td>{{ quiz.quest3 }}</td>
                        <td>{{ quiz.correctAnswer1 }}</td>
                        <td>{{ quiz.correctAnswer2 }}</td>
                        <td>{{ quiz.correctAnswer3 }}</td>
                        <td>
                            {% if quiz.diff == 'easy' %}
                                <span class="badge bg-success">Facile</span>
                            {% elseif quiz.diff == 'medium' %}
                                <span class="badge bg-warning text-dark">Moyen</span>
                            {% elseif quiz.diff == 'hard' %}
                                <span class="badge bg-danger">Difficile</span>
                            {% else %}
                                <span class="badge bg-secondary">Inconnu</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-primary btn-sm">üëÅÔ∏è Voir</a>
                            <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-warning btn-sm">‚úèÔ∏è Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10" class="text-center">Aucun quiz trouv√©.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}