{% extends 'base.html.twig' %}

{% block title %}R√©pondre au Quiz{% endblock %}

{% block stylesheets %}
    <style>
        /* Custom CSS for star rating */
        .star-rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-start;
            gap: 5px;
        }
        .star-rating input[type="radio"] {
            display: none;
        }
        .star-rating label {
            font-size: 2rem;
            color: #ddd;
            cursor: pointer;
            transition: color 0.2s;
        }
        .star-rating input[type="radio"]:checked ~ label {
            color: #ffc107; /* Yellow color for selected stars */
        }
        .star-rating label:hover,
        .star-rating label:hover ~ label {
            color: #ffc107; /* Yellow color on hover */
        }

        /* Modern card layout for questions */
        .question-card {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .question-card h5 {
            font-weight: 600;
            color: #333;
        }

        /* Button styling */
        .btn-submit {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            color: white;
            font-weight: 600;
            transition: background-color 0.3s;
        }

        .btn-submit:hover {
            background-color: #0056b3;
        }

        .btn-back {
            background-color: #6c757d;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            color: white;
            font-weight: 600;
            transition: background-color 0.3s;
        }

        .btn-back:hover {
            background-color: #5a6268;
        }

        /* Alert styling */
        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
            border-radius: 5px;
            padding: 10px;
            margin-top: 20px;
        }

        /* Score styling */
        .score-display {
            font-size: 2rem; /* Larger font size */
            font-weight: 700; /* Bold font weight */
            color: #28a745; /* Green color for emphasis */
            margin-top: 20px;
            padding: 15px 20px;
            background-color: #e8f5e9; /* Light green background */
            border-radius: 10px;
            border: 2px solid #28a745; /* Green border */
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }

        /* Highlight the score number */
        .score-display strong {
            color: #155724; /* Darker green for the score number */
        }

        /* Joke section styling */
        .joke-section {
            margin-top: 20px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            border: 1px solid #ddd;
        }

        .joke-section h3 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 15px;
        }

        .joke-section p {
            font-size: 1.2rem;
            color: #555;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="display-5 mb-4">‚úèÔ∏è R√©pondre au Quiz: <span class="text-primary">{{ quiz.Matiere }}</span></h1>

    <!-- Display score if available -->
    {% if respQuiz is not empty %}
        <div class="score-display">
            <strong>Votre score: {{ respQuiz.score }}</strong>
        </div>
    {% endif %}

    <!-- Questions in a card layout -->
    <div class="question-card">
        <h5>Question 1: {{ quiz.quest1 }}</h5>
        <h5>Question 2: {{ quiz.quest2 }}</h5>
        <h5>Question 3: {{ quiz.quest3 }}</h5>
    </div>

    <!-- Form for submitting answers -->
    {{ form_start(form) }}
        <div class="question-card">
            {{ form_row(form.userAnswer1, { 'attr': {'class': 'form-control mb-3'} }) }}
            {{ form_row(form.userAnswer2, { 'attr': {'class': 'form-control mb-3'} }) }}
            {{ form_row(form.userAnswer3, { 'attr': {'class': 'form-control mb-3'} }) }}
        </div>

        <!-- Star rating section -->
        <div class="form-group question-card">
            {{ form_label(form.rate, 'Notez ce quiz:', { 'label_attr': {'class': 'form-label'} }) }}
            <div class="star-rating">
                <!-- Add a hidden input for 0 stars -->
                <input type="radio" id="star0" name="{{ form.rate.vars.full_name }}" value="0" {% if form.rate.vars.value == 0 %}checked{% endif %}>
                <!-- Generate stars from 5 to 1 -->
                {% for i in 5..1 %}
                    <input type="radio" id="star{{ i }}" name="{{ form.rate.vars.full_name }}" value="{{ i }}" {% if form.rate.vars.value == i %}checked{% endif %}>
                    <label for="star{{ i }}">&#9733;</label>
                {% endfor %}
            </div>
            {{ form_errors(form.rate) }}
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-submit">Soumettre</button>
    {{ form_end(form) }}

    <!-- Back button -->
    <a href="{{ path('app_quiz_indexFront') }}" class="btn btn-back mt-3">
        <i class="fas fa-arrow-left"></i> Retour √† la liste des quiz
    </a>

    <!-- Success message -->
    {% if app.session.flashbag.has('success') %}
        <div class="alert alert-success mt-3">
            {{ app.session.flashbag.get('success')[0] }}
        </div>
    {% endif %}

    <!-- Display a joke if the score is 3 -->
    {% if respQuiz is not empty and respQuiz.score == 3 %}
        <div class="joke-section">
            <h3>üéâ Bravo! Voici une blague pour vous:</h3>
            <p>{{ joke }}</p>
        </div>
    {% endif %}
</div>
{% endblock %}