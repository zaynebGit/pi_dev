{# templates/user/login.html.twig #}

{% extends 'base2.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-form">
            <h1 class="login-title">Welcome Back</h1>
            <p class="login-subtitle">Please login to your account</p>

            <form action="{{ path('app_user_login') }}" method="post" class="form">
                <div class="form-group">
                    <label for="username" class="form-label">Email Address</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="_password" class="form-input" required>
                </div>

                {% if error %}
                    <div class="error-message">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="form-group">
                    <button type="submit" class="form-button">Login</button>
                </div>

                <div class="signup-link">
                    <p>Don't have an account? <a href="{{ path('app_user_signup') }}">Sign up here</a></p>
                </div>
            </form>
        </div> 
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f7fa;
        }

        .login-form {
            background-color: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        .login-title {
            text-align: center;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .login-subtitle {
            text-align: center;
            font-size: 14px;
            color: #555;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-input {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form-input:focus {
            border-color: #007bff;
            outline: none;
        }

        .error-message {
            color: red;
            font-size: 14px;
            margin-bottom: 15px;
        }

        .form-button {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .form-button:hover {
            background-color: #0056b3;
        }

        .signup-link {
            text-align: center;
            margin-top: 15px;
        }

        .signup-link a {
            color: #007bff;
            text-decoration: none;
        }

        .signup-link a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}
